<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OsmootNotes" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/dark_blue</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="dark_blue_color">@color/global_background</item>
        <item name="global_background_color">@color/dark_blue</item>
        <item name="light_blue_color">@color/light_blue</item>
        <item name="light_gray_color">@color/light_gray</item>
        <item name="highlighted_text_color">@color/highlighted_text</item>
        <item name="button_and_subtitles_color">@color/button_and_subtitles</item>
        <item name="elements_background_color">@color/dark_blue</item>
        <item name="subelements_background_color">@color/dark_blue</item>
        <item name="black_with_alpha_color">@color/white</item>
        <item name="clicked_tags_background_color">@color/button_and_subtitles</item>
    </style>
</resources>